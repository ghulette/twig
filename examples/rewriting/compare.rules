-- Peano number comparison

try(s) = s | T
repeat(s) = try(s;repeat(s))

cmp0 = [ cmp(z, z) -> eq : "z = z" ]
cmp1 = [ cmp(z, s(X)) -> gt : "z < ${X}"]
cmp2 = [ cmp(s(X), z) -> lt : "${X} > z"]
cmp3 = [ cmp(s(X), s(Y)) -> cmp(X, Y) : "${X} <?> ${Y}" ]
cmp = cmp0 | cmp1 | cmp2 | cmp3

main = repeat(cmp)
